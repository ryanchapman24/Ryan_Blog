@model Ryan_Blog.Models.Comment

@{
    ViewBag.Title = "DeleteComment";
}



<div class="blog-wall" style="margin-top: 100px; color: #388E8E">

    <h2>Delete Comment</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Comment</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Author.DisplayName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Author.DisplayName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Created)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Created)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Body)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Body)
                </dd>

            </dl>


            <div class="form-group" style="padding-bottom: 30px">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-default"/>
                    @Html.ActionLink("Cancel", "Details", new { slug = Model.Post.Slug }, new { @class = "btn btn-default", @style = "color: black" })
                </div>
            </div>
        </div>
    }
</div>


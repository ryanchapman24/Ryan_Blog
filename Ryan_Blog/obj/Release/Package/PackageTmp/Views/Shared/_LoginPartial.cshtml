@using Microsoft.AspNet.Identity

@if ((Request.IsAuthenticated) && User.IsInRole("Admin"))
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Admin", "Admin", "BlogPosts", null, htmlAttributes: new {style="font-size: 12px"})
            </li>
            <li>
                @Html.ActionLink("Hello, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", style = "font-size: 12px" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" style="font-size: 12px">Log off</a></li>
        </ul>
    }
}

